# NxtBus Environment Configuration Template
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Network Configuration
NETWORK_IP=your-network-ip-here

# Security Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_RATE_LIMITING=true

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# Security Features
ENABLE_SECURITY_HEADERS=true
ENABLE_COMPRESSION=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/nxtbus.log

# Database Configuration (for future use)
# DATABASE_URL=postgresql://username:password@localhost:5432/nxtbus
# REDIS_URL=redis://localhost:6379

# Monitoring (for future use)
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-newrelic-key